{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@helpers/*": ["helpers/*"],
      "@pages/*": ["pages/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "@server/*": ["server/*"],
      "@state/*": ["state/*"],
      "@schemas/*": ["schemas/*"],
      "@layouts/*": ["layouts/*"],
      "@blocks/*": ["blocks/*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
