{
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "plugins": ["react"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "react-hooks/rules-of-hooks": "off"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  }
}
